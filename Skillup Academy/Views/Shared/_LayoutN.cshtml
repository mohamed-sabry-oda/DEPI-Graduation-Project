<!DOCTYPE html>


<html lang="en" dir="ltr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewData["Title"] - Educational_Platform</title>
    <!-- استخدم النسخة الأحدث من Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
          integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Educational_Platform.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <link href="~/css/StyleHomePage.css" rel="stylesheet">
    <style>

        .logo {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.75rem;
            margin-bottom: 1rem;
        }

        .logo-icon {
            width: 44px;
            height: 44px;
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.3rem;
            box-shadow: 0 4px 8px rgba(109, 40, 217, 0.3);
        }

        .logo-text {
            font-size: 1.6rem;
            font-weight: 700;
            background: linear-gradient(to right, var(--primary-color), var(--secondary-color));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

    </style>
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="logo" style="display: flex; align-items: center;">
                <a asp-controller="Home" asp-action="Index" style="display: flex; align-items: center; text-decoration: none;">

                    <div class="logo-icon" style="font-size: 1.8rem; margin-inline-end: 8px;">

                        <i class="fas fa-graduation-cap"></i>

                    </div>
                    <div class="logo-text" style="font-size: 1.6rem; font-weight: bold;">Bedaya</div>
                </a>

            </div>
            <div class="menu-toggle" id="menuToggle">
                <span></span>
                <span></span>
                <span></span>
            </div>

            <ul class="nav-links" id="navLinks">
                <li class="me-4"><a asp-action="AllCourseInHeader" asp-controller="Course">Courses</a></li>
                <li class="me-4"><a asp-action="GetAllInstructors" asp-controller="Account">Instructors</a></li>
                <li class="mobile-auth">
                    @if (User.Identity.IsAuthenticated)
                    {
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Student"))
                        {
                            <div class="dropdown me-3">
                                <button class="btn fw-semibold dropdown-toggle"
                                        type="button" data-bs-toggle="dropdown"
                                        style="
                                                    text-decoration: none;
                                                    border-radius:6px;
                                                    padding: 8px 15px;
                                                    border: 1px solid #007bff;
                                                    background: linear-gradient(45deg, #007bff, #4da3ff);
                                                    color: white;
                                                    font-weight: 500;
                                                    font-size: 0.95rem;
                                                    display: flex;
                                                    align-items: center;
                                                    gap: 6px;
                                                    box-shadow: 0 3px 8px rgba(0,0,0,0.15);
                                                    transition: 0.25s ease-in-out;
                                                "
                                        onmouseover="this.style.boxShadow='0 4px 12px rgba(0,0,0,0.25)'"
                                        onmouseout="this.style.boxShadow='0 3px 8px rgba(0,0,0,0.15)'">
                                    <i class="fas fa-cog"></i> Settings
                                </button>
                                <ul class="dropdown-menu shadow-sm" style="border-radius: 10px; min-width: 180px;">
                                    <a class="dropdown-item d-flex align-items-center gap-2" asp-controller="Student" asp-action="Profile">
                                        <i class="fas fa-user-circle" style="color:#0d6efd;"></i> Profile
                                    </a>

                                    <a class="dropdown-item d-flex align-items-center gap-2" asp-controller="Home" asp-action="Index">
                                        <i class="fas fa-home" style="color:#28a745;"></i> Home
                                    </a>

                                    <a class="dropdown-item d-flex align-items-center gap-2" asp-controller="Course" asp-action="AllCaurseIsPublished">
                                        <i class="fas fa-graduation-cap" style="color:#ff9800;"></i> All Courses
                                    </a>

                                    <a class="dropdown-item d-flex align-items-center gap-2" asp-controller="Student" asp-action="MyCourse">
                                        <i class="fas fa-book" style="color:#6f42c1;"></i> My Courses
                                    </a>

                                    <a class="dropdown-item d-flex align-items-center gap-2" asp-controller="Student" asp-action="MySubscription">
                                        <i class="fas fa-credit-card" style="color:#dc3545;"></i> My Subscription
                                    </a>
                                </ul>

                            </div>
                        }
                        else
                        {
                            <a class="btn btn-profile" href="#" style="
                                                display: flex;
                                                align-items: center;
                                                padding: 8px 15px;
                                                border-radius: 6px;
                                                font-size: 0.95rem;
                                                margin-inline-end: 10px;
                                                text-decoration: none;
                                                /* تصميم زر بحدود لملف شخصي */
                                                background-color: #f0f8ff;
                                                color: #007bff;
                                                border: 1px solid #007bff;
                                                font-weight: 500;">
                                <i class="fas fa-user-circle"></i> Profile
                            </a>
                        }
                        <a asp-action="Logout" asp-controller="Account" type="submit" class="btn btn-logout" style="
                             background-color: #dc3545;
                            color: white;
                            padding: 8px 15px;
                            border-radius: 6px;
                            font-size: 0.95rem;
                            text-decoration: none;
                            border: 1px solid #dc3545;
                            font-weight: 500;
                        ">
                            Logout
                        </a>
                    }
                    else
                    {
                        <a class="btn btn-login" asp-action="Login" asp-controller="Account" style="
                             padding: 8px 15px;
                            border-radius: 6px;
                            font-size: 0.95rem;
                            margin-inline-end: 10px;
                            text-decoration: none;
                            background-color: #007bff;
                            color: white;
                            border: 1px solid #007bff;
                            font-weight: 600;
                        ">Login</a>
                        <a class="btn btn-register" asp-action="StudentRegister" asp-controller="Account" style="
                             padding: 8px 15px;
                            border-radius: 6px;
                            font-size: 0.95rem;
                            text-decoration: none;
                            background-color: transparent;
                            color: #007bff;
                            border: 1px solid #007bff;
                            font-weight: 600;
                        ">Register</a>
                    }
                </li>
            </ul>

            <form asp-action="SearchResults" asp-controller="Home" method="get" style="flex-grow: 1; max-width: 450px;">
                <div class="search-bar d-flex justify-content-center ">
                    <input type="text" name="query"
                           class="form-control shadow-sm"
                           placeholder="Search for a course, topic, or instructor..."
                           style="max-width: 350px; border-top-left-radius: 30px; border-bottom-left-radius: 30px; padding: 8px 15px; border: 1px solid #ced4da; font-size: 0.9rem;">
                    <button type="submit" class="btn btn-primary fw-semibold"
                            style="border-top-right-radius: 30px; border-bottom-right-radius: 30px; padding: 8px 20px; font-size: 0.9rem;">
                        <i class="fas fa-search me-1"></i> Search
                    </button>
                </div>
            </form>

            <div class="auth-buttons">
                @if (User.Identity.IsAuthenticated)
                {

                    @if (User.Identity.IsAuthenticated && User.IsInRole("Student"))
                    {

                        <div class="dropdown me-3">
                            <button class="btn fw-semibold dropdown-toggle"
                                    type="button" data-bs-toggle="dropdown"
                                    style="
                                                    text-decoration: none;
                                                    border-radius:6px;
                                                    padding: 8px 15px;
                                                    border: 1px solid #007bff;
                                                    background: linear-gradient(45deg, #007bff, #4da3ff);
                                                    color: white;
                                                    font-weight: 500;
                                                    font-size: 0.95rem;
                                                    display: flex;
                                                    align-items: center;
                                                    gap: 6px;
                                                    box-shadow: 0 3px 8px rgba(0,0,0,0.15);
                                                    transition: 0.25s ease-in-out;
                                                "
                                    onmouseover="this.style.boxShadow='0 4px 12px rgba(0,0,0,0.25)'"
                                    onmouseout="this.style.boxShadow='0 3px 8px rgba(0,0,0,0.15)'">
                                <i class="fas fa-cog"></i> Settings
                            </button>

                            <ul class="dropdown-menu shadow-sm" style="border-radius: 10px; min-width: 180px;">
                                <a class="dropdown-item d-flex align-items-center gap-2" asp-controller="Student" asp-action="Profile">
                                    <i class="fas fa-user-circle" style="color:#0d6efd;"></i> Profile
                                </a>

                                <a class="dropdown-item d-flex align-items-center gap-2" asp-controller="Home" asp-action="Index">
                                    <i class="fas fa-home" style="color:#28a745;"></i> Home
                                </a>

                                <a class="dropdown-item d-flex align-items-center gap-2" asp-controller="Course" asp-action="AllCaurseIsPublished">
                                    <i class="fas fa-graduation-cap" style="color:#ff9800;"></i> All Courses
                                </a>

                                <a class="dropdown-item d-flex align-items-center gap-2" asp-controller="Student" asp-action="MyCourse">
                                    <i class="fas fa-book" style="color:#6f42c1;"></i> My Courses
                                </a>

                                <a class="dropdown-item d-flex align-items-center gap-2" asp-controller="Student" asp-action="MySubscription">
                                    <i class="fas fa-credit-card" style="color:#dc3545;"></i> My Subscription
                                </a>
                            </ul>

                        </div>
                    }
                    else
                    {
                        <a class="btn btn-profile" href="#" style="
                                            display: flex;
                                            align-items: center;
                                            padding: 8px 15px;
                                            border-radius: 6px;
                                            font-size: 0.95rem;
                                            margin-inline-end: 10px;
                                            text-decoration: none;
                                            /* تصميم زر بحدود لملف شخصي */
                                            background-color: #f0f8ff;
                                            color: #007bff;
                                            border: 1px solid #007bff;
                                            font-weight: 500; ">
                            <i class="fas fa-user-circle"></i> Profile
                        </a>
                    }
                    <a asp-action="Logout" asp-controller="Account" type="submit" class="btn btn-logout" style="
                            /* تصميم زر الإجراء الهام (Logout) */
                            background-color: #dc3545;
                            color: white;
                            padding: 8px 15px;
                            border-radius: 6px;
                            font-size: 0.95rem;
                            text-decoration: none;
                            border: 1px solid #dc3545;
                            font-weight: 500;
                        ">
                        Logout
                    </a>
                }
                else
                {
                    <a class="btn btn-login" asp-action="Login" asp-controller="Account" style="
                            /* تصميم الزر الأساسي (Login) */
                            padding: 8px 15px;
                            border-radius: 6px;
                            font-size: 0.95rem;
                            margin-inline-end: 10px;
                            text-decoration: none;
                            background-color: #007bff;
                            color: white;
                            border: 1px solid #007bff;
                            font-weight: 600;
                        ">Login</a>
                    <a class="btn btn-register" asp-action="StudentRegister" asp-controller="Account" style="
                            /* تصميم زر التسجيل بحدود (Outline) */
                            padding: 8px 15px;
                            border-radius: 6px;
                            font-size: 0.95rem;
                            text-decoration: none;
                            background-color: transparent;
                            color: #007bff;
                            border: 1px solid #007bff;
                            font-weight: 600;
                        ">Register</a>
                }
            </div>
        </nav>
    </header>

    <main role="main" class="pb-3 my-1 mx-2">
        <div style="background-color:aliceblue ">
            @RenderBody()
        </div>

    </main>

    <footer>
        <div class="footer-content">
            <div class="footer-column">
                <h3>Bedaya</h3>
                <p>A leading educational platform aiming to provide high-quality educational content in various fields.</p>
                <div class="social-links">
                    <a href="#"><i class="fab fa-facebook-f"></i></a>
                    <a href="#"><i class="fab fa-twitter"></i></a>
                    <a href="#"><i class="fab fa-instagram"></i></a>
                    <a href="#"><i class="fab fa-linkedin-in"></i></a>
                </div>
            </div>
            <div class="footer-column">
                <h3>Quick Links</h3>
                <ul class="footer-links">
                    <li><a href="#">Home</a></li>
                    <li><a href="#">About</a></li>
                    <li><a href="#">Courses</a></li>
                    <li><a href="#">Instructors</a></li>
                    <li><a href="#">Contact Us</a></li>
                </ul>
            </div>
            <div class="footer-column">
                <h3>Categories</h3>
                <ul class="footer-links">
                    <li><a href="#">Web Development</a></li>
                    <li><a href="#">Programming</a></li>
                    <li><a href="#">Digital Marketing</a></li>
                    <li><a href="#">Design</a></li>
                    <li><a href="#">Business</a></li>
                </ul>
            </div>
            <div class="footer-column">
                <h3>Contact Us</h3>
                <ul class="footer-links">
                    <li><i class="fas fa-envelope"></i> info@bedaya.com</li>
                    <li><i class="fas fa-phone"></i> +201000000000</li>
                    <li><i class="fas fa-map-marker-alt"></i> Cairo, Egypt</li>
                </ul>
            </div>
        </div>
        <div class="copyright">
            <p>All Rights Reserved &copy; 2025 - Bedaya Platform - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></p>
        </div>
    </footer>


    <script>

        // Activate mobile menu toggle
        var menuToggleBtn = document.getElementById('menuToggle');
        if (menuToggleBtn) {
            menuToggleBtn.addEventListener('click', function() {
                var nav = document.getElementById('navLinks');
                if (nav) nav.classList.toggle('active');
            });
        }

        // Initialize page
        document.addEventListener('DOMContentLoaded', function() {
            if (typeof renderCourses === 'function') {
                renderCourses();
            }
        });
    </script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>