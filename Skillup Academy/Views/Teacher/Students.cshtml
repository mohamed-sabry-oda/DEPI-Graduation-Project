@using Skillup_Academy.ViewModels.TeacherDashboard
@model StudentListViewModel

@{
    ViewData["Title"] = "Students Management";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}

<!-- Teacher Top Bar -->
<div class="teacher-top-bar">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <div class="teacher-profile-info">
                    <div class="teacher-avatar-container">
                        @if (!string.IsNullOrEmpty(ViewBag.ProfilePictureUrl))
                        {
                            <img src="@ViewBag.ProfilePictureUrl" class="teacher-avatar" alt="@ViewBag.TeacherName">
                        }
                        else
                        {
                            <div class="teacher-avatar placeholder-avatar">
                                <i class="fas fa-user"></i>
                            </div>
                        }
                        <div class="online-indicator"></div>
                    </div>
                    <div class="teacher-details">
                        <h4 class="teacher-name mb-1">Welcome, @ViewBag.TeacherName!</h4>
                        <p class="teacher-expertise mb-0">
                            <i class="fas fa-graduation-cap me-1"></i>
                            @ViewBag.TeacherExpertise
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="d-flex align-items-center justify-content-end gap-3">
                    <button class="btn-notification">
                        <i class="fas fa-bell"></i>
                        <span class="notification-badge">3</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="container mt-4">
    <!-- Statistics Cards -->
    <div class="row g-4 mb-5">
        <div class="col-xl-3 col-md-6">
            <div class="stat-card gradient-1">
                <div class="stat-content">
                    <div class="stat-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <div class="stat-info">
                        <h3 class="stat-number">@Model.TotalStudents</h3>
                        <p class="stat-label">Total Students</p>
                    </div>
                </div>
                <div class="stat-footer">
                    <i class="fas fa-trending-up me-1"></i>
                    <small>All enrolled students</small>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="stat-card gradient-2">
                <div class="stat-content">
                    <div class="stat-icon">
                        <i class="fas fa-user-check"></i>
                    </div>
                    <div class="stat-info">
                        <h3 class="stat-number">@Model.ActiveStudents</h3>
                        <p class="stat-label">Active Students</p>
                    </div>
                </div>
                <div class="stat-footer">
                    <i class="fas fa-chart-line me-1"></i>
                    <small>Currently learning</small>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="stat-card gradient-3">
                <div class="stat-content">
                    <div class="stat-icon">
                        <i class="fas fa-user-clock"></i>
                    </div>
                    <div class="stat-info">
                        <h3 class="stat-number">@Model.InactiveStudents</h3>
                        <p class="stat-label">Inactive Students</p>
                    </div>
                </div>
                <div class="stat-footer">
                    <i class="fas fa-pause me-1"></i>
                    <small>Not active recently</small>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="stat-card gradient-4">
                <div class="stat-content">
                    <div class="stat-icon">
                        <i class="fas fa-user-graduate"></i>
                    </div>
                    <div class="stat-info">
                        <h3 class="stat-number">@Model.CompletedStudents</h3>
                        <p class="stat-label">Completed</p>
                    </div>
                </div>
                <div class="stat-footer">
                    <i class="fas fa-check-circle me-1"></i>
                    <small>Finished courses</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Courses Overview -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="courses-overview-card">
                <div class="card-header-custom">
                    <h4 class="section-title mb-0">
                        <i class="fas fa-book me-2"></i>Your Courses
                    </h4>
                    <span class="badge bg-primary">@Model.TeacherCourses.Count Courses</span>
                </div>
                <div class="card-body-custom">
                    @if (Model.TeacherCourses.Any())
                    {
                        <div class="row g-3">
                            @foreach (var course in Model.TeacherCourses)
                            {
                                <div class="col-md-4">
                                    <div class="course-mini-card">
                                        <div class="course-mini-header">
                                            <h6 class="course-mini-title">@course.Title</h6>
                                            <span class="course-status @(course.IsPublished ? "published" : "draft")">
                                                @(course.IsPublished ? "Published" : "Draft")
                                            </span>
                                        </div>
                                        <p class="course-mini-description">@course.Description</p>
                                        <div class="course-mini-stats">
                                            <div class="stat">
                                                <i class="fas fa-book text-primary"></i>
                                                <span>@course.TotalLessons Lessons</span>
                                            </div>
                                            <div class="stat">
                                                <i class="fas fa-users text-success"></i>
                                                <span>@course.TotalStudents Students</span>
                                            </div>
                                        </div>
                                        <div class="course-mini-footer">
                                            <small class="text-muted">
                                                Created: @course.CreatedDate.ToString("MMM dd, yyyy")
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <div class="empty-icon">
                                <i class="fas fa-book-open"></i>
                            </div>
                            <h5>No Courses Available</h5>
                            <p class="text-muted">You haven't created any courses yet.</p>
                            <a href="#" class="btn btn-primary">
                                <i class="fas fa-plus me-2"></i>Create Your First Course
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Students Table Section -->
    <div class="row">
        <div class="col-12">
            <div class="students-table-card">
                <div class="card-header-custom">
                    <h4 class="section-title mb-0">
                        <i class="fas fa-list me-2"></i>Students List
                    </h4>
                    <div class="d-flex gap-2">
                        <div class="search-box">
                            <i class="fas fa-search search-icon"></i>
                            <input type="text"
                                   class="search-input"
                                   placeholder="Search students..."
                                   id="searchInput">
                        </div>
                        <select class="form-select" id="statusFilter">
                            <option value="">All Status</option>
                            <option value="Active">Active</option>
                            <option value="Inactive">Inactive</option>
                            <option value="Completed">Completed</option>
                        </select>
                    </div>
                </div>
                <div class="card-body-custom">
                    @if (Model.Students.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover" id="studentsTable">
                                <thead>
                                    <tr>
                                        <th>Student Name</th>
                                        <th>Email</th>
                                        <th>Courses Enrolled</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var student in Model.Students)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="student-avatar">
                                                        @GetInitials(student.FullName)
                                                    </div>
                                                    <div class="student-info">
                                                        <div class="student-name">@student.FullName</div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>@student.Email</td>
                                            <td>
                                                <span class="courses-badge">@student.CoursesCount Courses</span>
                                            </td>
                                            <td>
                                                <span class="status-badge @GetStatusClass(student.Status.ToString())">
                                                    @student.Status
                                                </span>
                                            </td>
                                            <td>
                                                <div class="action-buttons">
                                                    <!-- زر View Profile - تم التصحيح -->
                                                    <a asp-action="StudentDetails" asp-controller="Teacher" asp-route-id="@student.StudentId.ToString()" class="btn-action btn-view" title="View Profile">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <button class="btn-action btn-message" title="Send Message">
                                                        <i class="fas fa-envelope"></i>
                                                    </button>
                                                    <button class="btn-action btn-progress" title="View Progress">
                                                        <i class="fas fa-chart-line"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Pagination -->
                        @if (Model.TotalRecords > Model.PageSize)
                        {
                            <div class="pagination-container mt-4">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="pagination-info">
                                        Showing <strong>@((Model.PageNumber - 1) * Model.PageSize + 1)-@Math.Min(Model.PageNumber * Model.PageSize, Model.TotalRecords)</strong> of <strong>@Model.TotalRecords</strong> students
                                    </div>
                                    <div class="pagination-controls">
                                        @if (Model.PageNumber > 1)
                                        {
                                            <a href="@Url.Action("Students", new { page = Model.PageNumber - 1 })" class="btn btn-outline-primary btn-pagination">
                                                <i class="fas fa-chevron-left me-2"></i>Previous
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="btn btn-outline-secondary btn-pagination disabled">
                                                <i class="fas fa-chevron-left me-2"></i>Previous
                                            </span>
                                        }

                                        <div class="pagination-numbers mx-3">
                                            @for (int i = 1; i <= Math.Ceiling((double)Model.TotalRecords / Model.PageSize); i++)
                                            {
                                                if (i == Model.PageNumber)
                                                {
                                                    <span class="pagination-number active">@i</span>
                                                }
                                                else
                                                {
                                                    <a href="@Url.Action("Students", new { page = i })" class="pagination-number">@i</a>
                                                }
                                            }
                                        </div>

                                        @if (Model.PageNumber < Math.Ceiling((double)Model.TotalRecords / Model.PageSize))
                                        {
                                            <a href="@Url.Action("Students", new { page = Model.PageNumber + 1 })" class="btn btn-primary btn-pagination">
                                                Next<i class="fas fa-chevron-right ms-2"></i>
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="btn btn-outline-secondary btn-pagination disabled">
                                                Next<i class="fas fa-chevron-right ms-2"></i>
                                            </span>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="empty-state">
                            <div class="empty-icon">
                                <i class="fas fa-users"></i>
                            </div>
                            <h5>No Students Found</h5>
                            <p class="text-muted">You don't have any students enrolled in your courses yet.</p>
                            <a href="#" class="btn btn-primary">
                                <i class="fas fa-plus me-2"></i>Create New Course
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

