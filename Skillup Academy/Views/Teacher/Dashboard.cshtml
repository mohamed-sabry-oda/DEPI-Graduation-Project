@using Skillup_Academy.ViewModels.TeacherDashboard
@model TeacherDashboardVM

@{
    ViewData["Title"] = "Teacher Dashboard";
    Layout = "/Views/Shared/_TeacherLayout.cshtml";
}

<!-- Top Bar with Teacher Profile & Search -->
<div class="teacher-top-bar">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <div class="teacher-profile-info">
                    <div class="teacher-avatar-container">
                        @if (!string.IsNullOrEmpty(Model.ProfilePictureUrl))
                        {
                            <img src="@Model.ProfilePictureUrl" class="teacher-avatar" alt="@Model.TeacherName">
                        }
                        else
                        {
                            <div class="teacher-avatar placeholder-avatar">
                                <i class="fas fa-user"></i>
                            </div>
                        }
                        <div class="online-indicator"></div>
                    </div>
                    <div class="teacher-details">
                        <h4 class="teacher-name mb-1">Welcome, @Model.TeacherName!</h4>
                        <p class="teacher-expertise mb-0">
                            <i class="fas fa-graduation-cap me-1"></i>
                            @Model.TeacherExpertise
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="d-flex align-items-center justify-content-end gap-3">
                    <div class="search-box">
                        <i class="fas fa-search search-icon"></i>
                        <input type="text" class="search-input" placeholder="Search courses, students, content...">
                    </div>
                    <button class="btn-notification">
                        <i class="fas fa-bell"></i>
                        <span class="notification-badge">3</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Compact Hero Section with Bio -->
<div class="hero-section-compact">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <div class="hero-content-compact">
                    <h1 class="hero-title-compact">Inspiring Tomorrow's Innovators</h1>
                    <p class="hero-bio-compact">@Model.TeacherBio</p>
                    <div class="hero-actions-compact mt-3">
                        <a asp-action="Create" asp-controller="Course" class="btn btn-primary btn-lg me-2">
                            <i class="fas fa-plus-circle me-2"></i>Create Course
                        </a>
                        <a asp-action="ShowAll" asp-controller="Course" class="btn btn-outline-light btn-lg">
                            <i class="fas fa-book-open me-2"></i>My Courses
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 text-center">
                <div class="hero-stats-compact">
                    <div class="stat-badge">
                        <span class="stat-number">@Model.TotalCourses</span>
                        <span class="stat-label">Courses</span>
                    </div>
                    <div class="stat-badge">
                        <span class="stat-number">@Model.TotalStudents</span>
                        <span class="stat-label">Students</span>
                    </div>
                    <div class="stat-badge">
                        <span class="stat-number">@Model.TeacherRating</span>
                        <span class="stat-label">Rating</span>
                    </div>
                </div>
                <p class="teacher-expertise-compact mt-3">
                    <strong>Specialization:</strong><br>
                    @Model.TeacherExpertise
                </p>
            </div>
        </div>
    </div>
</div>

<!-- Statistics Section -->
<div class="container mt-5">
    <div class="row g-4 mb-5">
        <div class="col-xl-3 col-md-6">
            <div class="stat-card gradient-1">
                <div class="stat-content">
                    <div class="stat-icon">
                        <i class="fas fa-book"></i>
                    </div>
                    <div class="stat-info">
                        <h3 class="stat-number">@Model.TotalCourses</h3>
                        <p class="stat-label">Total Courses</p>
                    </div>
                </div>
                <div class="stat-footer">
                    <i class="fas fa-trending-up me-1"></i>
                    <small>@(Model.TotalCourses > 0 ? "Active content" : "Start creating")</small>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="stat-card gradient-2">
                <div class="stat-content">
                    <div class="stat-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <div class="stat-info">
                        <h3 class="stat-number">@Model.TotalStudents</h3>
                        <p class="stat-label">Total Students</p>
                    </div>
                </div>
                <div class="stat-footer">
                    <i class="fas fa-user-graduate me-1"></i>
                    <small>@(Model.TotalStudents > 0 ? "Active learners" : "No students yet")</small>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="stat-card gradient-3">
                <div class="stat-content">
                    <div class="stat-icon">
                        <i class="fas fa-play-circle"></i>
                    </div>
                    <div class="stat-info">
                        <h3 class="stat-number">@Model.TotalLessons</h3>
                        <p class="stat-label">Total Lessons</p>
                    </div>
                </div>
                <div class="stat-footer">
                    <i class="fas fa-video me-1"></i>
                    <small>Educational content</small>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="stat-card gradient-4">
                <div class="stat-content">
                    <div class="stat-icon">
                        <i class="fas fa-star"></i>
                    </div>
                    <div class="stat-info">
                        <h3 class="stat-number">@Model.TeacherRating<span class="stat-decimal">/5.0</span></h3>
                        <p class="stat-label">Average Rating</p>
                    </div>
                </div>
                <div class="stat-footer">
                    <div class="rating-stars">
                        @for (int i = 0; i < 5; i++)
                        {
                            <i class="fas fa-star @(i < Math.Floor(Model.TeacherRating) ? "text-warning" : "text-light")"></i>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions Section -->
<div class="container mb-4">
    <div class="row">
        <div class="col-12">
            <div class="quick-actions-horizontal">
                <h4 class="section-title mb-3">
                    <i class="fas fa-bolt me-2"></i>Quick Actions
                </h4>
                <div class="quick-actions-grid-horizontal">
                    <a asp-action="Create" asp-controller="Course" class="quick-action-item-horizontal">
                        <div class="action-icon-horizontal bg-primary">
                            <i class="fas fa-plus-circle"></i>
                        </div>
                        <span>New Course</span>
                    </a>
                    <a asp-action="Create" asp-controller="Lessons" class="quick-action-item-horizontal">
                        <div class="action-icon-horizontal bg-success">
                            <i class="fas fa-play-circle"></i>
                        </div>
                        <span>New Lesson</span>
                    </a>
                    <a asp-action="ShowAll" asp-controller="Course" class="quick-action-item-horizontal">
                        <div class="action-icon-horizontal bg-info">
                            <i class="fas fa-list-alt"></i>
                        </div>
                        <span>All Courses</span>
                    </a>
                    <a href="#" class="quick-action-item-horizontal">
                        <div class="action-icon-horizontal bg-warning">
                            <i class="fas fa-users-cog"></i>
                        </div>
                        <span>Manage Students</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Courses & Recent Activity Section -->
<div class="container mb-5">
    <div class="row">
        <!-- Courses Section - Full Width -->
        <div class="col-12">
            <div class="courses-section-full">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h3 class="section-title">My Courses</h3>
                        <p class="text-muted mb-0">Manage and organize your teaching content</p>
                    </div>
                    <a asp-action="ShowAll" asp-controller="Course" class="btn btn-outline-primary">
                        <i class="fas fa-list me-2"></i>View All Courses
                    </a>
                </div>

                @if (Model.Courses != null && Model.Courses.Any())
                {
                    <div class="row g-4" id="courses-container">
                        @foreach (var course in Model.Courses.Take(6))
                        {
                            <div class="col-xl-4 col-lg-6 col-md-6">
                                <div class="course-card-modern" data-course-id="@course.CourseId">
                                    <div class="course-image-container">
                                        @if (!string.IsNullOrEmpty(course.ThumbnailUrl))
                                        {
                                            <img src="/img/@course.ThumbnailUrl" class="course-image" alt="@course.Title">
                                        }
                                        else
                                        {
                                            <div class="course-image-placeholder">
                                                <i class="fas fa-book-open"></i>
                                            </div>
                                        }
                                    </div>
                                    <div class="course-body">
                                        <div class="course-header">
                                            <h5 class="course-title">@course.Title</h5>
                                            <div class="course-status-badge @(course.IsPublished ? "published" : "draft")">
                                                @(course.IsPublished ? "Published" : "Draft")
                                            </div>
                                        </div>

                                        <div class="course-meta">
                                            <div class="meta-item">
                                                <i class="fas fa-calendar"></i>
                                                <span>@course.CreatedDate.ToString("MMM dd, yyyy")</span>
                                            </div>
                                            <div class="meta-item">
                                                <i class="fas fa-play-circle"></i>
                                                <span>@course.TotalLessons Lessons</span>
                                            </div>
                                        </div>

                                        <div class="course-stats">
                                            <div class="stat">
                                                <i class="fas fa-users"></i>
                                                <span>@course.TotalStudents Students</span>
                                            </div>
                                            <div class="stat">
                                                <i class="fas fa-star"></i>
                                                <span>@course.AverageRating/5 Rating</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="course-footer">
                                        <div class="course-actions">
                                            <a asp-action="Edit" asp-controller="Course" asp-route-id="@course.CourseId" class="btn-action btn-edit" title="Edit Course">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button class="btn-action btn-preview" title="Preview">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                            <button class="btn-action btn-analytics" title="Analytics">
                                                <i class="fas fa-chart-bar"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <!-- Pagination Controls -->
                    @if (Model.Courses.Count() > 6)
                    {
                        <div class="pagination-container mt-4">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="pagination-info">
                                    Showing <span id="showing-count">6</span> of @Model.Courses.Count() courses
                                </div>
                                <div class="pagination-controls">
                                    <button class="btn btn-outline-primary btn-sm me-2" id="prev-courses">
                                        <i class="fas fa-chevron-left me-1"></i>Previous
                                    </button>
                                    <button class="btn btn-primary btn-sm" id="next-courses">
                                        Next<i class="fas fa-chevron-right ms-1"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="empty-state">
                        <div class="empty-icon">
                            <i class="fas fa-book-open"></i>
                        </div>
                        <h4>No Courses Created Yet</h4>
                        <p class="text-muted">Start your teaching journey by creating your first course and sharing your knowledge.</p>
                        <a asp-action="Create" asp-controller="Course" class="btn btn-primary btn-lg">
                            <i class="fas fa-plus me-2"></i>Create Your First Course
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Recent Activity Section - Separate Section -->
<div class="container mb-5">
    <div class="row">
        <div class="col-12">
            <div class="sidebar-card">
                <h4 class="sidebar-title">
                    <i class="fas fa-history me-2"></i>Recent Activity
                </h4>
                <div class="activity-timeline">
                    <div class="activity-item">
                        <div class="activity-icon success">
                            <i class="fas fa-user-plus"></i>
                        </div>
                        <div class="activity-content">
                            <p class="mb-1">5 new students enrolled in your course</p>
                            <small class="text-muted">2 hours ago</small>
                        </div>
                    </div>
                    <div class="activity-item">
                        <div class="activity-icon primary">
                            <i class="fas fa-comment"></i>
                        </div>
                        <div class="activity-content">
                            <p class="mb-1">New comment on your lesson</p>
                            <small class="text-muted">5 hours ago</small>
                        </div>
                    </div>
                    <div class="activity-item">
                        <div class="activity-icon warning">
                            <i class="fas fa-star"></i>
                        </div>
                        <div class="activity-content">
                            <p class="mb-1">Your course received a 5-star rating</p>
                            <small class="text-muted">1 day ago</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

