
@using Core.Enums
@using Skillup_Academy.ViewModels.TeacherDashboard
@model StudentDetailsVM

@{
    ViewData["Title"] = "Student Details";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}

<!-- Teacher Top Bar -->
<div class="teacher-top-bar">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <div class="teacher-profile-info">
                    <div class="teacher-avatar-container">
                        @if (!string.IsNullOrEmpty(ViewBag.ProfilePictureUrl))
                        {
                            <img src="@ViewBag.ProfilePictureUrl" class="teacher-avatar" alt="@ViewBag.TeacherName">
                        }
                        else
                        {
                            <div class="teacher-avatar placeholder-avatar">
                                <i class="fas fa-user"></i>
                            </div>
                        }
                        <div class="online-indicator"></div>
                    </div>
                    <div class="teacher-details">
                        <h4 class="teacher-name mb-1">Student Details</h4>
                        <p class="teacher-expertise mb-0">
                            <i class="fas fa-user-graduate me-1"></i>
                            View and manage student information
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="d-flex align-items-center justify-content-end gap-3">
                    <a href="@Url.Action("Students", "Teacher")" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Back to Students
                    </a>
                    <button class="btn btn-primary">
                        <i class="fas fa-envelope me-2"></i>Send Message
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container mt-4">
    <!-- Student Profile Header -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="student-profile-header">
                <div class="row align-items-center">
                    <div class="col-md-8">
                        <div class="d-flex align-items-center">
                            <div class="student-avatar-large">
                                @if (!string.IsNullOrEmpty(Model.ProfilePicture))
                                {
                                    <img src="/img/@Model.ProfilePicture" alt="@Model.FullName">
                                }
                                else
                                {
                                    <div class="avatar-placeholder">
                                        @GetInitials(Model.FullName)
                                    </div>
                                }
                                <div class="status-indicator @(Model.Status == StudentStatus.Active ? "online" : "offline")"></div>
                            </div>
                            <div class="student-info-main ms-4">
                                <h1 class="student-name">@Model.FullName</h1>
                                <div class="student-meta">
                                    <span class="meta-item">
                                        <i class="fas fa-envelope me-1"></i>@Model.Email
                                    </span>
                                    @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                                    {
                                        <span class="meta-item">
                                            <i class="fas fa-phone me-1"></i>@Model.PhoneNumber
                                        </span>
                                    }
                                    <span class="meta-item status-badge @Model.Status.ToString().ToLower()">
                                        <i class="fas fa-circle me-1"></i>@Model.Status
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 text-md-end">
                        <div class="student-stats">
                            <div class="stat-item">
                                <div class="stat-number">@Model.CoursesCount</div>
                                <div class="stat-label">Courses</div>
                            </div>
                            @* <div class="stat-item">
                                <div class="stat-number">@(Model.Courses?.Sum(c => c.) ?? 0)%</div>
                                <div class="stat-label">Avg Progress</div>
                            </div> *@
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Stats -->
    <div class="row g-4 mb-5">
        <div class="col-xl-3 col-md-6">
            <div class="stat-card gradient-1">
                <div class="stat-content">
                    <div class="stat-icon">
                        <i class="fas fa-book"></i>
                    </div>
                    <div class="stat-info">
                        <h3 class="stat-number">@Model.CoursesCount</h3>
                        <p class="stat-label">Enrolled Courses</p>
                    </div>
                </div>
                <div class="stat-footer">
                    <i class="fas fa-trending-up me-1"></i>
                    <small>Total courses enrolled</small>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="stat-card gradient-2">
                <div class="stat-content">
                    <div class="stat-icon">
                        <i class="fas fa-check-circle"></i>
                    </div>
                   @*  <div class="stat-info">
                        <h3 class="stat-number">@(Model.Courses?.Count(c => c.CompletionPercentage >= 100) ?? 0)</h3>
                        <p class="stat-label">Completed Courses</p>
                    </div> *@
                </div>
                <div class="stat-footer">
                    <i class="fas fa-graduation-cap me-1"></i>
                    <small>Fully completed</small>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="stat-card gradient-3">
                <div class="stat-content">
                    <div class="stat-icon">
                        <i class="fas fa-clock"></i>
                    </div>
                   @*  <div class="stat-info">
                        <h3 class="stat-number">@(Model.Courses?.Count(c => c.CompletionPercentage > 0 && c.CompletionPercentage < 100) ?? 0)</h3>
                        <p class="stat-label">In Progress</p>
                    </div> *@
                </div>
                <div class="stat-footer">
                    <i class="fas fa-spinner me-1"></i>
                    <small>Currently learning</small>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="stat-card gradient-4">
                <div class="stat-content">
                    <div class="stat-icon">
                        <i class="fas fa-chart-line"></i>
                    </div>
                    @* <div class="stat-info">
                        <h3 class="stat-number">@(Model.Courses?.Average(c => c.CompletionPercentage)?.ToString("0") ?? "0")%</h3>
                        <p class="stat-label">Average Progress</p>
                    </div> *@
                </div>
                <div class="stat-footer">
                    <i class="fas fa-percentage me-1"></i>
                    <small>Overall progress</small>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Student Courses -->
        <div class="col-lg-8">
            <div class="student-courses-card">
                <div class="card-header-custom">
                    <h4 class="section-title mb-0">
                        <i class="fas fa-book me-2"></i>Enrolled Courses
                    </h4>
                    <span class="badge bg-primary">@Model.CoursesCount Courses</span>
                </div>
                <div class="card-body-custom">
                    @if (Model.Courses != null && Model.Courses.Any())
                    {
                        <div class="courses-list">
                            @foreach (var course in Model.Courses)
                            {
                                <div class="course-progress-item">
                                    <div class="course-info">
                                        <div class="course-header">
                                            <h5 class="course-title">@course.CourseTitle</h5>
                                            @* <span class="progress-percentage">@course.CompletionPercentage%</span> *@
                                        </div>
                                        <p class="course-description">@course.CourseDescription</p>
                                        <div class="progress-container">
                                            <div class="progress-bar">
                                                @* <div class="progress-fill" style="width: @course.CompletionPercentage%"></div> *@
                                            </div>
                                            <div class="progress-stats">
                                                <span class="stat">
                                                    <i class="fas fa-play-circle me-1"></i>
                                                    @* @course.CompletedLessons/@course.TotalLessons lessons *@
                                                </span>
                                                <span class="stat">
                                                    <i class="fas fa-clock me-1"></i>
                                                   @*  Last active: @course.LastAccessDate.ToString("MMM dd, yyyy") *@
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="course-actions">
                                        <button class="btn-action btn-view" data-course-id="@course.CourseId" title="View Course">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <button class="btn-action btn-progress" data-course-id="@course.CourseId" title="View Progress">
                                            <i class="fas fa-chart-line"></i>
                                        </button>
                                        <button class="btn-action btn-message" data-course-id="@course.CourseId" title="Send Message">
                                            <i class="fas fa-envelope"></i>
                                        </button>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <div class="empty-icon">
                                <i class="fas fa-book-open"></i>
                            </div>
                            <h5>No Courses Enrolled</h5>
                            <p class="text-muted">This student hasn't enrolled in any of your courses yet.</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Student Information Sidebar -->
        <div class="col-lg-4">
            <div class="student-info-sidebar">
                <!-- Personal Information -->
                <div class="info-card">
                    <div class="card-header-custom">
                        <h5 class="section-title mb-0">
                            <i class="fas fa-user me-2"></i>Personal Information
                        </h5>
                    </div>
                    <div class="card-body-custom">
                        <div class="info-item">
                            <label>Full Name</label>
                            <p>@Model.FullName</p>
                        </div>
                        <div class="info-item">
                            <label>Email Address</label>
                            <p>@Model.Email</p>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                        {
                            <div class="info-item">
                                <label>Phone Number</label>
                                <p>@Model.PhoneNumber</p>
                            </div>
                        }
                        <div class="info-item">
                            <label>Status</label>
                            <div class="status-badge @Model.Status.ToString().ToLower()">
                                <i class="fas fa-circle me-1"></i>@Model.Status
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="info-card">
                    <div class="card-header-custom">
                        <h5 class="section-title mb-0">
                            <i class="fas fa-bolt me-2"></i>Quick Actions
                        </h5>
                    </div>
                    <div class="card-body-custom">
                        <div class="action-buttons-vertical">
                            <button class="btn-action-full btn-message">
                                <i class="fas fa-envelope me-2"></i>Send Message
                            </button>
                            <button class="btn-action-full btn-progress">
                                <i class="fas fa-chart-bar me-2"></i>View Full Progress
                            </button>
                            <button class="btn-action-full btn-certificate">
                                <i class="fas fa-award me-2"></i>Generate Certificate
                            </button>
                            <button class="btn-action-full btn-notes">
                                <i class="fas fa-sticky-note me-2"></i>Add Notes
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Recent Activity -->
                <div class="info-card">
                    <div class="card-header-custom">
                        <h5 class="section-title mb-0">
                            <i class="fas fa-history me-2"></i>Recent Activity
                        </h5>
                    </div>
                    @* <div class="card-body-custom">
                        <div class="activity-list">
                            @if (Model.Courses != null && Model.Courses.Any())
                            {
                                var recentCourses = Model.Courses.OrderByDescending(c => c.LastAccessDate).Take(3);
                                foreach (var course in recentCourses)
                                {
                                    <div class="activity-item">
                                        <div class="activity-icon">
                                            <i class="fas fa-play-circle"></i>
                                        </div>
                                        <div class="activity-content">
                                            <p class="activity-text">Accessed <strong>@course.CourseTitle</strong></p>
                                            <small class="activity-time">@course.LastAccessDate.ToString("MMM dd, yyyy HH:mm")</small>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <p class="text-muted text-center">No recent activity</p>
                            }
                        </div>
                    </div> *@
                </div>
            </div>
        </div>
    </div>
</div>

