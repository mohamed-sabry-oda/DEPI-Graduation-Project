
@model CourseReviewViewModel

@{
    ViewData["Title"] = "Create Course Review";
}

<h1>Create Course Review</h1>
<hr />
@{
    var generalErrors = ViewContext.ModelState
                                    .Where(x => x.Key == string.Empty)
                                    .SelectMany(x => x.Value.Errors)
                                    .ToList();
}

@if (generalErrors.Any())
{
    <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">Create Review Failed!</h4>
        <ul>
            @foreach (var error in generalErrors)
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}
