<section class="roles">
    <div class="section-title">
        <h2>Join Bedaya Platform</h2>
        <p>Choose your role and start your journey with us</p>
    </div>
    <div class="roles-grid">
        <div class="role-card">
            <div class="role-icon">
                <i class="fas fa-user-graduate"></i>
            </div>
            <h3>Student</h3>
            <p>Join as a student to learn from the best instructors and develop your skills</p>
            <a href="/Account/StudentRegister" class="btn btn-register">Join as a Student</a>
        </div>
        <div class="role-card">
            <div class="role-icon">
                <i class="fas fa-chalkboard-teacher"></i>
            </div>
            <h3>Instructor</h3>
            <p>Join as an instructor to share your knowledge and teach others</p>
            <a href="/Account/InstructorRegister" class="btn btn-register">Join as an Instructor</a>
        </div>

    </div>
</section>


