@model Lesson

@{
    ViewData["Title"] = "Lesson Details: " + Model.Title;
    var baseMediaPath = Url.Content("~/img/");

    var lessonVideoPath = string.IsNullOrEmpty(Model.VideoUrl) ? "N/A" : baseMediaPath + Model.VideoUrl;

    var lessonAttachmentPath = string.IsNullOrEmpty(Model.AttachmentUrl) ? "N/A" : baseMediaPath + Model.AttachmentUrl;
}

<style>
    /* CSS Styles from Course Details - Keep necessary styles for look and feel */
    :root {
        --card-radius: 12px;
        --accent: #4e73df;
        --muted: #6c757d;
    }

    .lesson-wrap {
        padding: 40px 15px;
    }

    .media-box {
        width: 100%;
        height: 480px; /* أكبر قليلاً للفيديو */
        overflow: hidden;
        border-radius: 10px;
        background: #000;
        margin-bottom: 30px;
    }

        .media-box video {
            width: 100%;
            height: 100%;
            object-fit: cover;
            display: block;
            border: 0;
        }

    .shadow-lg-soft {
        box-shadow: 0 8px 30px rgba(63,76,92,0.08);
    }
</style>

<div class="container lesson-wrap">
    <div class="row justify-content-center">
        <div class="col-lg-10">

            <h1 class="display-6 fw-bold text-dark mb-1">@Model.Title</h1>
            <p class="lead text-muted">Part of: @(Model.Course?.Title ?? "N/A Course")</p>

            @* Lesson Status and Metadata *@
            <div class="d-flex flex-wrap align-items-center gap-2 mb-4">
                <span class="badge rounded-pill px-3 py-2 @(Model.IsFree ? "bg-info text-dark" : "bg-dark text-white")">
                    <i class="fas fa-money-bill me-1"></i> @(Model.IsFree ? "FREE Lesson" : "PAID Lesson")
                </span>
                <span class="badge rounded-pill px-3 py-2 bg-primary text-white">
                    <i class="fas fa-sort-numeric-up me-1"></i> Order: @Model.OrderInCourse
                </span>
                <span class="badge rounded-pill px-3 py-2 bg-secondary text-white">
                    <i class="fas fa-tag me-1"></i> @Model.Type.ToString()
                </span>
                <span class="text-muted small ms-2">
                    <i class="far fa-clock me-1"></i> Duration: @Model.Duration Minutes
                </span>
            </div>

            <hr class="my-4" />

            @* 🎥 Video Player Section *@
            <div class="card rounded-3 shadow-lg-soft mb-5 border-0 overflow-hidden">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0 fw-bold"><i class="fas fa-video me-2"></i> Lesson Content</h5>
                </div>
                <div class="card-body p-0">
                    <div class="media-box">
                        @if (lessonVideoPath != "N/A")
                        {
                            <video controls playsinline style="width:100%;height:100%;background:#000;">
                                <source src="@lessonVideoPath" type="video/mp4" />
                                Your browser does not support the video tag.
                            </video>
                        }
                        else
                        {
                            <div class="h-100 d-flex align-items-center justify-content-center text-center" style="background:#fbfcfd;">
                                <div class="text-muted">
                                    <i class="fas fa-video-slash fs-1 mb-2"></i>
                                    <div>Video Content Not Available</div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            @* 📎 Attachment Section and Description *@
            <div class="row g-4">
                <div class="col-lg-8">
                    <div class="card shadow-sm mb-4 border-0">
                        <div class="card-header bg-white">
                            <h5 class="mb-0 fw-bold text-dark"><i class="fas fa-file-alt me-2 text-primary"></i> Description</h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text">@Html.Raw(Model.Description?.Replace(System.Environment.NewLine, "<br/>") ?? "<em>No detailed description provided.</em>")</p>
                        </div>
                    </div>

                    <div class="card shadow-sm mb-4 border-0">
                        <div class="card-header bg-white">
                            <h5 class="mb-0 fw-bold text-dark"><i class="fas fa-pencil-alt me-2 text-primary"></i> Text Content</h5>
                        </div>
                        <div class="card-body bg-light">
                            <p class="card-text">@Html.Raw(Model.Content?.Replace(System.Environment.NewLine, "<br/>") ?? "<em>No text content provided.</em>")</p>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="card shadow-sm border-0 mb-4 h-100">
                        <div class="card-header bg-white">
                            <h5 class="mb-0 fw-bold text-dark"><i class="fas fa-paperclip me-2 text-dark"></i> Attachment</h5>
                        </div>
                        <div class="card-body d-flex flex-column justify-content-center align-items-center text-center bg-light">
                            @if (lessonAttachmentPath != "N/A")
                            {
                                <i class="fas fa-file-download fa-4x text-success mb-3"></i>
                                <p class="text-muted small mb-3">File available for download:</p>
                                <a href="@lessonAttachmentPath" download class="btn btn-success btn-block px-4">
                                    <i class="fas fa-download me-2"></i> Download File
                                </a>
                            }
                            else
                            {
                                <i class="fas fa-exclamation-triangle fa-3x text-warning mb-3"></i>
                                <p class="text-muted small mb-0">No attachment available for this lesson.</p>
                            }
                        </div>
                    </div>
                </div>
            </div>


            <div class="mt-5 text-center">
                @if (User.IsInRole("Admin") || User.IsInRole("Instructor"))
                {
                    <a asp-action="Edit" asp-controller="Lessons" asp-route-id="@Model.Id" class="btn btn-primary btn-lg me-3 px-5 shadow-sm">
                        <i class="fas fa-edit me-2"></i> Edit Lesson
                    </a>
                }
                <a asp-action="Index" asp-controller="Lessons" asp-route-id="@Model.CourseId" class="btn btn-outline-secondary btn-lg px-5">
                    <i class="fas fa-list me-2"></i> Back to Lesson List
                </a>


            </div>

        </div>
    </div>
</div>