@model Skillup_Academy.ViewModels.StudentsViewModels.StudentProfileViewModel
@{
    ViewData["Title"] = "My Profile";
    Layout = "_LayoutN";
}

<style>
    .profile-card {
        background: white;
        border-radius: 20px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.1);
        position: relative;
        margin-top: 30px;
        border: none;
        overflow: hidden;
    }

    .profile-header {
        text-align: center;
        padding: 30px 20px 20px;
        background: linear-gradient(to bottom, #f8f9fa 0%, #ffffff 100%);
    }

    .profile-image-wrapper {
        position: relative;
        display: inline-block;
        margin-bottom: 20px;
    }

    .profile-image {
        width: 160px;
        height: 160px;
        border-radius: 50%;
        object-fit: cover;
        border: 5px solid white;
        box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        transition: transform 0.3s ease;
    }

        .profile-image:hover {
            transform: scale(1.05);
        }

    .profile-badge {
        position: absolute;
        bottom: 10px;
        right: 10px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 3px solid white;
        box-shadow: 0 4px 10px rgba(0,0,0,0.2);
    }

    .profile-name {
        font-size: 28px;
        font-weight: 700;
        color: #2d3748;
        margin-bottom: 5px;
    }

    .profile-email {
        color: #718096;
        font-size: 16px;
        margin-bottom: 20px;
    }

    .action-buttons {
        display: flex;
        gap: 15px;
        justify-content: center;
        margin-top: 20px;
    }

    .btn-modern {
        padding: 12px 30px;
        border-radius: 25px;
        font-weight: 600;
        font-size: 14px;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .btn-primary-modern {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
    }

        .btn-primary-modern:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(102, 126, 234, 0.6);
        }

    .btn-secondary-modern {
        background: white;
        color: #667eea;
        border: 2px solid #667eea;
    }

        .btn-secondary-modern:hover {
            background: #667eea;
            color: white;
            transform: translateY(-2px);
        }

    .info-section {
        padding: 30px;
    }

    .section-title {
        font-size: 20px;
        font-weight: 700;
        color: #2d3748;
        margin-bottom: 25px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

        .section-title::before {
            content: '';
            width: 4px;
            height: 24px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 2px;
        }

    .info-table {
        width: 100%;
    }

    .info-row {
        display: flex;
        padding: 15px 0;
        border-bottom: 1px solid #e2e8f0;
        transition: background 0.2s ease;
    }

        .info-row:hover {
            background: #f7fafc;
            padding-left: 10px;
        }

    .info-label {
        font-weight: 600;
        color: #718096;
        min-width: 180px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .info-value {
        color: #2d3748;
        font-weight: 500;
    }

    .stats-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        padding: 30px;
        background: linear-gradient(to bottom, #f8f9fa 0%, #ffffff 100%);
    }

    .stat-card {
        background: white;
        padding: 25px;
        border-radius: 15px;
        text-align: center;
        box-shadow: 0 4px 15px rgba(0,0,0,0.08);
        transition: all 0.3s ease;
        border: 2px solid transparent;
    }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.12);
            border-color: #667eea;
        }

    .stat-icon {
        width: 50px;
        height: 50px;
        margin: 0 auto 15px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
    }

        .stat-icon.primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }

        .stat-icon.success {
            background: linear-gradient(135deg, #48bb78 0%, #38a169 100%);
            color: white;
        }

        .stat-icon.info {
            background: linear-gradient(135deg, #4299e1 0%, #3182ce 100%);
            color: white;
        }

    .stat-number {
        font-size: 32px;
        font-weight: 700;
        margin-bottom: 8px;
    }

    .stat-label {
        color: #718096;
        font-size: 14px;
        font-weight: 600;
    }

    @@media (max-width: 768px) {
        .action-buttons

    {
        flex-direction: column;
    }

    .btn-modern {
        width: 100%;
        justify-content: center;
    }

    .stats-container {
        grid-template-columns: 1fr;
    }

    }
</style>

<div class="container mt-5">
    <div class="profile-card">
        <!-- Profile Header -->
        <div class="profile-header">
            <div class="profile-image-wrapper">
                <img src="@Url.Content(Model.ProfilePicture)"
                     class="profile-image"
                     alt="Profile Picture" />
                <div class="profile-badge">
                    <svg width="20" height="20" viewBox="0 0 20 20" fill="currentColor">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                    </svg>
                </div>
            </div>

            <h1 class="profile-name">@Model.FullName</h1>
            <p class="profile-email">@Model.Email</p>

            <div class="action-buttons">
                <button onclick="openEditProfile()" class="btn-modern btn-primary-modern">
                    <svg width="18" height="18" viewBox="0 0 20 20" fill="currentColor">
                        <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
                    </svg>
                    Edit Profile
                </button>
                <button onclick="openChangePassword()" class="btn-modern btn-secondary-modern">
                    <svg width="18" height="18" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
                    </svg>
                    Change Password
                </button>
            </div>
        </div>

        <!-- Account Information -->
        <div class="info-section">
            <h2 class="section-title">Account Information</h2>
            <div class="info-table">
                <div class="info-row">
                    <div class="info-label">
                        <svg width="16" height="16" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
                        </svg>
                        Username
                    </div>
                    <div class="info-value">@Model.UserName</div>
                </div>
                <div class="info-row">
                    <div class="info-label">
                        <svg width="16" height="16" viewBox="0 0 20 20" fill="currentColor">
                            <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
                        </svg>
                        Phone
                    </div>
                    <div class="info-value">@Model.PhoneNumber</div>
                </div>
                <div class="info-row">
                    <div class="info-label">
                        <svg width="16" height="16" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
                        </svg>
                        Registered On
                    </div>
                    <div class="info-value">@Model.RegistrationDate.ToString("MMMM dd, yyyy")</div>
                </div>
                <div class="info-row">
                    <div class="info-label">
                        <svg width="16" height="16" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
                        </svg>
                        Last Login
                    </div>
                    <div class="info-value">@(Model.LastLoginDate?.ToString("MMMM dd, yyyy") ?? "N/A")</div>
                </div>
                <div class="info-row">
                    <div class="info-label">
                        <svg width="16" height="16" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M4 2a1 1 0 011 1v2.101a7.002 7.002 0 0111.601 2.566 1 1 0 11-1.885.666A5.002 5.002 0 005.999 7H9a1 1 0 010 2H4a1 1 0 01-1-1V3a1 1 0 011-1zm.008 9.057a1 1 0 011.276.61A5.002 5.002 0 0014.001 13H11a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0v-2.101a7.002 7.002 0 01-11.601-2.566 1 1 0 01.61-1.276z" clip-rule="evenodd" />
                        </svg>
                        Last Profile Update
                    </div>
                    <div class="info-value">@(Model.LastProfileUpdate?.ToString("MMMM dd, yyyy") ?? "N/A")</div>
                </div>
            </div>
        </div>

        <!-- Learning Stats -->
        <div>
            <div class="info-section" style="padding-bottom: 15px;">
                <h2 class="section-title">Learning Statistics</h2>
            </div>
            <div class="stats-container">
                @* <div class="stat-card">
                    <div class="stat-icon primary">
                        <svg width="24" height="24" viewBox="0 0 20 20" fill="currentColor">
                            <path d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3zM3.31 9.397L5 10.12v4.102a8.969 8.969 0 00-1.05-.174 1 1 0 01-.89-.89 11.115 11.115 0 01.25-3.762zM9.3 16.573A9.026 9.026 0 007 14.935v-3.957l1.818.78a3 3 0 002.364 0l5.508-2.361a11.026 11.026 0 01.25 3.762 1 1 0 01-.89.89 8.968 8.968 0 00-5.35 2.524 1 1 0 01-1.4 0zM6 18a1 1 0 001-1v-2.065a8.935 8.935 0 00-2-.712V17a1 1 0 001 1z" />
                        </svg>
                    </div>
                    <div class="stat-number" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
                        @Model.CompletedCourses
                    </div>
                    <div class="stat-label">Completed Courses</div>
                </div> *@

                <div class="stat-card">
                    <div class="stat-icon success">
                        <svg width="24" height="24" viewBox="0 0 20 20" fill="currentColor">
                            <path d="M9 4.804A7.968 7.968 0 005.5 4c-1.255 0-2.443.29-3.5.804v10A7.969 7.969 0 015.5 14c1.669 0 3.218.51 4.5 1.385A7.962 7.962 0 0114.5 14c1.255 0 2.443.29 3.5.804v-10A7.968 7.968 0 0014.5 4c-1.255 0-2.443.29-3.5.804V12a1 1 0 11-2 0V4.804z" />
                        </svg>
                    </div>
                    <div class="stat-number" style="background: linear-gradient(135deg, #48bb78 0%, #38a169 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
                        @Model.TotalEnrollments
                    </div>
                    <div class="stat-label">Total Enrollments</div>
                </div>

                @* <div class="stat-card">
                    <div class="stat-icon info">
                        <svg width="24" height="24" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M3 3a1 1 0 000 2v8a2 2 0 002 2h2.586l-1.293 1.293a1 1 0 101.414 1.414L10 15.414l2.293 2.293a1 1 0 001.414-1.414L12.414 15H15a2 2 0 002-2V5a1 1 0 100-2H3zm11.707 4.707a1 1 0 00-1.414-1.414L10 9.586 8.707 8.293a1 1 0 00-1.414 0l-2 2a1 1 0 101.414 1.414L8 10.414l1.293 1.293a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    <div class="stat-number" style="background: linear-gradient(135deg, #4299e1 0%, #3182ce 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
                        @Model.OverallProgress%
                    </div>
                    <div class="stat-label">Overall Progress</div>
                </div> *@
            </div>
        </div>
    </div>
</div>

<!-- ========== Edit Profile MODAL ========== -->
<div class="modal fade" id="editProfileModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content" id="editProfileModalContent" style="border-radius: 20px; border: none;">
            <!-- Ajax will load content here -->
        </div>
    </div>
</div>

<!-- ========== Change Password MODAL ========== -->
<div class="modal fade" id="changePasswordModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content" id="changePasswordModalContent" style="border-radius: 20px; border: none;">
            <!-- Ajax will load content here -->
        </div>
    </div>
</div>

<script>
    function openEditProfile() {
        const modal = new bootstrap.Modal(document.getElementById('editProfileModal'));
        modal.show();

        $.get("/Student/EditProfile", function (data) {
            $("#editProfileModalContent").html(data);
        }).fail(function() {
            $("#editProfileModalContent").html('<div class="alert alert-danger m-4">Failed to load profile editor.</div>');
        });
    }

    function openChangePassword() {
        const modal = new bootstrap.Modal(document.getElementById('changePasswordModal'));
        modal.show();

        $.get("/Student/ChangePassword", function (data) {
            $("#changePasswordModalContent").html(data);
        }).fail(function() {
            $("#changePasswordModalContent").html('<div class="alert alert-danger m-4">Failed to load password form.</div>');
        });
    }
</script>