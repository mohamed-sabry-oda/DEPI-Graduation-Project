@using Skillup_Academy.ViewModels.TeacherDashboard
@model IEnumerable<CourseDashboardViewModel>

@{
    ViewData["Title"] = "My Courses";
    Layout = "/Views/Shared/_TeacherLayout.cshtml";

    // Pagination settings
    var pageSize = 6; // Number of courses per page
    var currentPage = Context.Request.Query["page"].ToString() != "" ? int.Parse(Context.Request.Query["page"]) : 1;
    var totalCourses = Model.Count();
    var totalPages = (int)Math.Ceiling((double)totalCourses / pageSize);
    var displayedCourses = Model.Skip((currentPage - 1) * pageSize).Take(pageSize);
}

<!-- Top Bar -->
<div class="teacher-top-bar">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <div class="teacher-profile-info">
                    <div class="teacher-avatar-container">
                        @if (!string.IsNullOrEmpty(ViewBag.ProfilePictureUrl))
                        {
                            <img src="@ViewBag.ProfilePictureUrl" class="teacher-avatar" alt="@ViewBag.TeacherName">
                        }
                        else
                        {
                            <div class="teacher-avatar placeholder-avatar">
                                <i class="fas fa-user"></i>
                            </div>
                        }
                        <div class="online-indicator"></div>
                    </div>
                    <div class="teacher-details">
                        <h4 class="teacher-name mb-1">Welcome, @ViewBag.TeacherName!</h4>
                        <p class="teacher-expertise mb-0">
                            <i class="fas fa-graduation-cap me-1"></i>
                            @ViewBag.TeacherExpertise
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="d-flex align-items-center justify-content-end gap-3">
                    <button class="btn-notification">
                        <i class="fas fa-bell"></i>
                        <span class="notification-badge">3</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Compact Hero Section -->
<div class="hero-section-compact">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <div class="hero-content-compact">
                    <h1 class="hero-title-compact">Manage Your Courses</h1>
                    <p class="hero-bio-compact">Create, edit, and track the performance of your educational content in one place.</p>
                    <div class="hero-actions-compact mt-3">
                        <a asp-action="Create" asp-controller="Course" class="btn btn-primary btn-lg me-2">
                            <i class="fas fa-plus-circle me-2"></i>Create New Course
                        </a>
                       
                    </div>
                </div>
            </div>
            <div class="col-md-4 text-center">
                <div class="hero-stats-compact">
                    <div class="stat-badge">
                        <span class="stat-number">@Model.Count()</span>
                        <span class="stat-label">Total</span>
                    </div>
                    <div class="stat-badge">
                        <span class="stat-number">@Model.Count(c => c.IsPublished)</span>
                        <span class="stat-label">Published</span>
                    </div>
                    <div class="stat-badge">
                        <span class="stat-number">@Model.Sum(c => c.TotalStudents)</span>
                        <span class="stat-label">Students</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container mt-5">
    <!-- Enhanced Statistics Cards -->
    <div class="row g-4 mb-5">
        <div class="col-xl-3 col-md-6">
            <div class="stat-card gradient-1">
                <div class="stat-content">
                    <div class="stat-icon">
                        <i class="fas fa-book"></i>
                    </div>
                    <div class="stat-info">
                        <h3 class="stat-number">@Model.Count()</h3>
                        <p class="stat-label">Total Courses</p>
                    </div>
                </div>
                <div class="stat-footer">
                    <i class="fas fa-trending-up me-1"></i>
                    <small>@(Model.Count() > 0 ? "Active content" : "Start creating")</small>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="stat-card gradient-2">
                <div class="stat-content">
                    <div class="stat-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <div class="stat-info">
                        <h3 class="stat-number">@Model.Sum(c => c.TotalStudents)</h3>
                        <p class="stat-label">Total Students</p>
                    </div>
                </div>
                <div class="stat-footer">
                    <i class="fas fa-user-graduate me-1"></i>
                    <small>@(Model.Sum(c => c.TotalStudents) > 0 ? "Active learners" : "No students yet")</small>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="stat-card gradient-3">
                <div class="stat-content">
                    <div class="stat-icon">
                        <i class="fas fa-play-circle"></i>
                    </div>
                    <div class="stat-info">
                        <h3 class="stat-number">@Model.Sum(c => c.TotalLessons)</h3>
                        <p class="stat-label">Total Lessons</p>
                    </div>
                </div>
                <div class="stat-footer">
                    <i class="fas fa-video me-1"></i>
                    <small>Educational content</small>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="stat-card gradient-4">
                <div class="stat-content">
                    <div class="stat-icon">
                        <i class="fas fa-chart-line"></i>
                    </div>
                    <div class="stat-info">
                        <h3 class="stat-number">@Model.Count(c => c.IsPublished)</h3>
                        <p class="stat-label">Published</p>
                    </div>
                </div>
                <div class="stat-footer">
                    <i class="fas fa-check-circle me-1"></i>
                    <small>Live courses</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Filter and Search Bar -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="filter-section">
                <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                    <div class="d-flex align-items-center gap-3">
                        <h3 class="section-title mb-0">My Courses</h3>
                        <div class="filter-badges">
                            <span class="badge filter-badge active" data-filter="all">All (@Model.Count())</span>
                            <span class="badge filter-badge" data-filter="published">Published (@Model.Count(c => c.IsPublished))</span>
                            <span class="badge filter-badge" data-filter="draft">Draft (@Model.Count(c => !c.IsPublished))</span>
                        </div>
                    </div>
                    <div class="d-flex gap-2">
                        <form method="get" asp-action="CourseSearch" asp-route-id="@ViewBag.TeacherId">
                            <div class="search-box">
                                <i class="fas fa-search search-icon"></i>
                                <input type="text"
                                       class="search-input"
                                       placeholder="Search courses..."
                                       id="courseSearch"
                                       name="searchString" />
                            </div>

                            <input type="hidden" name="teacherId" value="@ViewBag.TeacherId" />
                        </form>
                        <div class="sort-dropdown">
                            <select class="form-select" id="sortSelect">
                                <option value="newest">Newest First</option>
                                <option value="oldest">Oldest First</option>
                                <option value="students">Most Students</option>
                                <option value="rating">Highest Rating</option>
                            </select>
                        </div>
                        <a asp-action="Create" asp-controller="Course" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>New Course
                        </a>
                        <a asp-action="ShowAll" asp-controller="Course" class="btn btn-outline-primary">
                            <i class="fas fa-list me-2"></i>View All
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Courses Grid -->
    <div class="row" id="courses-container">
        @if (displayedCourses != null && displayedCourses.Any())
        {
            foreach (var course in displayedCourses)
            {
                <div class="col-xl-4 col-lg-6 mb-4 course-item"
                     data-status="@(course.IsPublished ? "published" : "draft")"
                     data-title="@course.Title.ToLower()"
                     data-date="@course.CreatedDate.Ticks"
                     data-students="@course.TotalStudents"
                     data-rating="@course.AverageRating">
                    <div class="course-card-modern" data-course-id="@course.CourseId">
                        <div class="course-image-container">
                            @if (!string.IsNullOrEmpty(course.ThumbnailUrl))
                            {
                                <img src="/img/@course.ThumbnailUrl" class="course-image" alt="@course.Title">
                            }
                            else
                            {
                                <div class="course-image-placeholder">
                                    <i class="fas fa-book-open"></i>
                                </div>
                            }
                            <div class="course-badges">
                                <span class="course-status-badge @(course.IsPublished ? "published" : "draft")">
                                    @(course.IsPublished ? "Published" : "Draft")
                                </span>
                                <span class="course-type-badge @(course.IsFree ? "free" : "paid")">
                                    @(course.IsFree ? "Free" : "Paid")
                                </span>
                            </div>
                        </div>
                        <div class="course-body">
                            <div class="course-header">
                                <h5 class="course-title">@course.Title</h5>
                                <div class="course-rating">
                                    <i class="fas fa-star text-warning"></i>
                                    <span>@course.AverageRating.ToString("0.0")</span>
                                </div>
                            </div>

                            <p class="course-description">@(string.IsNullOrEmpty(course.Description) ? "No description available." : (course.Description.Length > 120 ? course.Description.Substring(0, 120) + "..." : course.Description))</p>

                            <div class="course-meta">
                                <div class="meta-item">
                                    <i class="fas fa-calendar"></i>
                                    <span>@course.CreatedDate.ToString("MMM dd, yyyy")</span>
                                </div>
                                <div class="meta-item">
                                    <i class="fas fa-clock"></i>
                                    <span>@course.TotalDuration min</span>
                                </div>
                            </div>

                            <div class="course-stats">
                                <div class="stat">
                                    <i class="fas fa-users"></i>
                                    <span>@course.TotalStudents Students</span>
                                </div>
                                <div class="stat">
                                    <i class="fas fa-play-circle"></i>
                                    <span>@course.TotalLessons Lessons</span>
                                </div>
                            </div>
                        </div>
                        <div class="course-footer">
                            <div class="course-actions">
                                <a asp-action="Details" asp-controller="Course" asp-route-id="@course.CourseId" class="btn-action btn-view" title="View Details">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-controller="Course" asp-route-id="@course.CourseId" class="btn-action btn-edit" title="Edit Course">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Delete" asp-controller="Course" asp-route-id="@course.CourseId" class="btn-action btn-delete" title="Delete Course">
                                    <i class="fas fa-trash"></i>
                                </a>
                                <a href="#" class="btn-action btn-analytics" title="View Analytics">
                                    <i class="fas fa-chart-bar"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="empty-state">
                    <div class="empty-icon">
                        <i class="fas fa-book-open"></i>
                    </div>
                    <h4>No Courses Created Yet</h4>
                    <p class="text-muted">Start your teaching journey by creating your first course and sharing your knowledge.</p>
                    <a asp-action="Create" asp-controller="Course" class="btn btn-primary btn-lg">
                        <i class="fas fa-plus me-2"></i>Create Your First Course
                    </a>
                </div>
            </div>
        }
    </div>

    <!-- Empty Search Results Message (Hidden by default) -->
    <div class="row d-none" id="no-results-message">
        <div class="col-12">
            <div class="empty-state">
                <div class="empty-icon">
                    <i class="fas fa-search"></i>
                </div>
                <h4>No Courses Found</h4>
                <p class="text-muted">We couldn't find any courses matching your search criteria. Try adjusting your search or filter.</p>
                <button class="btn btn-outline-primary" id="reset-filters">
                    <i class="fas fa-refresh me-2"></i>Reset Filters
                </button>
            </div>
        </div>
    </div>

    <!-- Pagination Controls -->
    @if (totalPages > 1)
    {
        <div class="row mt-4">
            <div class="col-12">
                <div class="pagination-container">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="pagination-info">
                            Showing <strong>@((currentPage - 1) * pageSize + 1)-@Math.Min(currentPage * pageSize, totalCourses)</strong> of <strong>@totalCourses</strong> courses
                        </div>
                        <div class="pagination-controls">
                            @if (currentPage > 1)
                            {
                                <a href="?page=@(currentPage - 1)" class="btn btn-outline-primary btn-pagination">
                                    <i class="fas fa-chevron-left me-2"></i>Previous
                                </a>
                            }
                            else
                            {
                                <span class="btn btn-outline-secondary btn-pagination disabled">
                                    <i class="fas fa-chevron-left me-2"></i>Previous
                                </span>
                            }

                            <div class="pagination-numbers mx-3">
                                @for (int i = 1; i <= totalPages; i++)
                                {
                                    if (i == currentPage)
                                    {
                                        <span class="pagination-number active">@i</span>
                                    }
                                    else
                                    {
                                        <a href="?page=@i" class="pagination-number">@i</a>
                                    }
                                }
                            </div>

                            @if (currentPage < totalPages)
                            {
                                <a href="?page=@(currentPage + 1)" class="btn btn-primary btn-pagination">
                                    Next<i class="fas fa-chevron-right ms-2"></i>
                                </a>
                            }
                            else
                            {
                                <span class="btn btn-outline-secondary btn-pagination disabled">
                                    Next<i class="fas fa-chevron-right ms-2"></i>
                                </span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Quick Performance Stats -->
    <div class="row mt-5">
        <div class="col-12">
            <div class="performance-card">
                <h4 class="section-title mb-4">
                    <i class="fas fa-tachometer-alt me-2"></i>Course Performance Overview
                </h4>
                <div class="row text-center">
                    <div class="col-md-3">
                        <div class="performance-item">
                            <div class="performance-icon bg-primary">
                                <i class="fas fa-rocket"></i>
                            </div>
                            <h3 class="performance-value">@Model.Count(c => c.IsPublished)</h3>
                            <p class="performance-label">Published Courses</p>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="performance-item">
                            <div class="performance-icon bg-warning">
                                <i class="fas fa-edit"></i>
                            </div>
                            <h3 class="performance-value">@Model.Count(c => !c.IsPublished)</h3>
                            <p class="performance-label">Draft Courses</p>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="performance-item">
                            <div class="performance-icon bg-success">
                                <i class="fas fa-user-graduate"></i>
                            </div>
                            <h3 class="performance-value">@Model.Sum(c => c.TotalStudents)</h3>
                            <p class="performance-label">Total Enrollments</p>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="performance-item">
                            <div class="performance-icon bg-info">
                                <i class="fas fa-play-circle"></i>
                            </div>
                            <h3 class="performance-value">@Model.Sum(c => c.TotalLessons)</h3>
                            <p class="performance-label">Total Lessons</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete the course "<span id="courseToDeleteTitle"></span>"?</p>
                <p class="text-danger"><small>This action cannot be undone. All course data will be permanently lost.</small></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <a href="#" class="btn btn-danger" id="confirmDeleteBtn">Delete Course</a>
            </div>
        </div>
    </div>
</div>

