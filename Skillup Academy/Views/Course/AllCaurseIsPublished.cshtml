@model IEnumerable<Course>

@{
    ViewData["Title"] = "Explore Courses";
    var baseImageUrl = "/uploads/thumbnails/";
    var pageNumber = (int?)ViewBag.Page ?? 1;
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
    :root {
        --primary-brand: #3A70F2;
        --secondary-dark: #1F2937;
        --success-color: #10B981;
        --bg-light: #F9FAFB;
        --card-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
        --card-hover-shadow: 0 15px 40px rgba(0, 0, 0, 0.12);
        --warning-color: #FBBF24;
    }

    body {
        font-family: 'Inter', sans-serif;
        background-color: var(--bg-light);
    }

    .display-4 {
        font-weight: 800 !important;
        color: var(--secondary-dark) !important;
        font-size: 2.5rem;
    }

    .text-primary {
        color: var(--primary-brand) !important;
    }

    .lead.text-muted {
        color: #6B7280 !important;
    }

    .btn-outline-secondary {
        border-color: #E5E7EB;
        color: #6B7280;
        font-weight: 600;
        border-radius: 8px;
    }

    .card.course-card-student {
        background-color: #ffffff;
        border-radius: 16px !important;
        box-shadow: var(--card-shadow) !important;
        border: 1px solid #E5E7EB !important;
        transition: transform 0.4s cubic-bezier(0.25, 0.8, 0.25, 1), box-shadow 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
        min-height: 480px;
    }

        .card.course-card-student:hover {
            transform: translateY(-8px) !important;
            box-shadow: var(--card-hover-shadow) !important;
        }

    .card-img-top {
        transition: transform 0.4s;
    }

    .card.course-card-student:hover .card-img-top {
        transform: scale(1.05);
    }

    .badge.bg-success {
        background-color: var(--success-color) !important;
    }

    .badge.bg-dark {
        background-color: var(--secondary-dark) !important;
    }

    .card-title {
        font-size: 1.35rem !important;
        font-weight: 800 !important;
        color: var(--secondary-dark) !important;
        line-height: 1.3;
        flex-grow: 1;
        max-height: 2.6em;
        overflow: hidden;
    }

    .text-muted.small.mb-3 {
        font-size: 0.95rem;
        color: #6B7280 !important;
        max-height: 3.5em;
        overflow: hidden;
        margin-bottom: 20px !important;
    }

    .d-flex.justify-content-between.small.text-muted.mb-3.border-top.pt-3 {
        border-top: 1px dashed #E5E7EB !important;
        padding-top: 15px !important;
        margin-bottom: 20px !important;
        font-size: 0.9rem !important;
    }

    .text-warning {
        color: var(--warning-color) !important;
    }

    .btn.btn-primary.btn-lg {
        background-color: var(--primary-brand) !important;
        border-color: var(--primary-brand) !important;
        font-weight: 600;
        padding: 12px 20px;
        border-radius: 8px;
        transition: all 0.3s;
    }

        .btn.btn-primary.btn-lg:hover {
            background-color: #3162DB !important;
            border-color: #3162DB !important;
            box-shadow: 0 4px 15px rgba(58, 112, 242, 0.4) !important;
        }

    .alert.alert-warning {
        background-color: #FEF3C7;
        color: #92400E;
        border-left: 5px solid #FBBF24 !important;
        font-size: 1.1rem;
    }

</style>

<div class="container">

    <div class="row align-items-center mb-5 mt-3">
        <div class="col-md-9">
            <h1 class="display-4 text-primary fw-bold">Explore Our Courses</h1>
            <p class="lead text-muted">Find the perfect course to start your learning journey today.</p>
        </div>
    </div>

    <div class="row">
        @if (Model.Any())
        {
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 shadow-lg border-0 rounded-3 course-card-student">

                        <div class="position-relative overflow-hidden">
                            @{
                                var imageUrl = string.IsNullOrEmpty(item.ThumbnailUrl) ? "/img/default-course.jpg" : item.ThumbnailUrl;
                            }
                            <img src="/img/@imageUrl"
                                 class="card-img-top"
                                 alt="@item.Title"
                                 style="height: 200px; object-fit: cover;">

                            <div class="position-absolute bottom-0 start-0 m-2">
                                @if (item.IsFree)
                                {
                                    <span class="badge rounded-pill bg-success fw-bold p-2"><i class="bi bi-wallet-fill me-1"></i> FREE</span>
                                }
                                else
                                {
                                    <span class="badge rounded-pill bg-dark fw-bold p-2">PAID</span>
                                }
                            </div>
                        </div>

                        <div class="card-body d-flex flex-column">

                            <h5 class="card-title text-dark fw-bold mb-1">@Html.DisplayFor(modelItem => item.Title)</h5>
                            <p class="text-muted small mb-3 flex-grow-1">@Html.DisplayFor(modelItem => item.ShortDescription)</p>

                            <div class="d-flex justify-content-between small text-muted mb-3 border-top pt-3">
                                <div>
                                    <i class="bi bi-star-fill text-warning me-1"></i>
                                    <span class="fw-bold text-dark">@item.AverageRating.ToString("F1")</span> (@item.TotalEnrollments)
                                </div>
                                <div>
                                    <i class="bi bi-journal-text me-1"></i> @item.TotalLessons Lessons
                                </div>
                            </div>
                            
                                    @if (item.IsFree)
                                    {
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div class="course-price text-success">FREE</div>
                                            <div class="text-muted small">Full Access</div>
                                        </div>
                                        <a asp-controller="Course" asp-action="Details" asp-route-id="@item.Id" class="btn btn-success btn-enroll w-100 mt-3" style="background-color: var(--success-color);">Start Learning</a>

                                    }
                                    else
                                    {
                                        <a asp-action="Details" asp-controller="Course" asp-route-id="@item.Id" class="btn btn-primary btn-enroll w-100 mt-3">Enroll Now</a>
                                    } 
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-warning border-0 shadow-sm text-center p-4" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i> Sorry, no active courses are available right now.
                </div>
            </div>
        }
    </div>

    <nav aria-label="Page navigation" class="mt-5">
        <ul class="pagination justify-content-center">
            <li class="page-item disabled"><a class="page-link" href="#" aria-label="Previous"><span aria-hidden="true">&laquo;</span></a></li>
            <li class="page-item @(pageNumber == 1 ? "active" : "") "><a class="page-link" asp-controller="Course" asp-action="AllCaurseIsPublished" asp-route-page="1">1</a></li>
            <li class="page-item @(pageNumber == 2 ? "active" : "") "><a class="page-link" asp-controller="Course" asp-action="AllCaurseIsPublished" asp-route-page="2">2</a></li>
            <li class="page-item @(pageNumber == 3 ? "active" : "") "><a class="page-link" asp-controller="Course" asp-action="AllCaurseIsPublished" asp-route-page="3">3</a></li>
            <li class="page-item @(pageNumber == 4 ? "active" : "") "><a class="page-link" asp-controller="Course" asp-action="AllCaurseIsPublished" asp-route-page="4">4</a></li>
            <li class="page-item"><a class="page-link" href="#" aria-label="Next"><span aria-hidden="true">&raquo;</span></a></li>
        </ul>
    </nav>

</div>
@section Scripts {
    <style>
        .course-card-student {
            transition: transform 0.4s cubic-bezier(0.25, 0.8, 0.25, 1), box-shadow 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
        }

            .course-card-student:hover {
                transform: translateY(-8px) !important;
                box-shadow: var(--card-hover-shadow) !important;
            }
    </style>
}