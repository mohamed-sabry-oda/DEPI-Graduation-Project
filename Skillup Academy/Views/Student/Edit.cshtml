@model StudentViewModel

@{
    ViewData["Title"] = "Edit Student Details";
}


<div class="row justify-content-center">
    <div class="col-lg-9">
        <form asp-action="Edit" method="post">

            <input type="hidden" asp-for="Id" />

            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="card shadow mb-4">
                <div class="card-header bg-primary text-white">
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="FullName" class="form-label"></label>
                                <input asp-for="FullName" class="form-control" />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="UserName" class="form-label"></label>
                                <input asp-for="UserName" class="form-control" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Email" class="form-label"></label>
                                <input asp-for="Email" class="form-control" type="email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="PhoneNumber" class="form-label"></label>
                                <input asp-for="PhoneNumber" class="form-control" type="tel" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="TotalEnrollments" class="form-label"></label>
                                <input asp-for="TotalEnrollments" class="form-control" readonly />
                                <span asp-validation-for="TotalEnrollments" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="CompletedCourses" class="form-label"></label>
                                <input asp-for="CompletedCourses" class="form-control" />
                                <span asp-validation-for="CompletedCourses" class="text-danger"></span>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <div class="card shadow mb-4">
                <div class="card-header bg-info text-white">
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group mb-3">
                                <label asp-for="RegistrationDate" class="form-label"></label>
                                <input asp-for="RegistrationDate" class="form-control" readonly />
                                <span asp-validation-for="RegistrationDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group mb-3">
                                <label asp-for="LastLoginDate" class="form-label"></label>
                                <input asp-for="LastLoginDate" class="form-control" readonly />
                                <span asp-validation-for="LastLoginDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-4 d-flex align-items-center pt-4">
                            <div class="form-group form-check mb-3">
                                <input class="form-check-input" asp-for="IsActive" />
                                <label class="form-check-label" asp-for="IsActive">
                                    @Html.DisplayNameFor(model => model.IsActive)
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group pt-3 text-center">
                <input type="submit" value="Save Changes" class="btn btn-primary btn-lg px-5" />
            </div>

        </form>
    </div>
</div>

<div class="mt-4 text-center">
    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}